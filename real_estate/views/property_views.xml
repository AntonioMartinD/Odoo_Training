<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': 1} </field>
    </record>
    <record id="property_search" model="ir.ui.view">
        <field name="name">property.search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Search">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" filter_domain="[('living_area', '>=', self)]" />
                <field name="facades" />
                <field name="property_type_id" />
                <separator />
                <filter
                    string="Available"
                    name="available"
                    domain="['|',('state', '=', 'new'), ('state', '=', 'received')]"
                />
                <group expand="1" string="Group By">
                    <filter
                        string="Postcode"
                        name="postcode_group_filter"
                        context="{'group_by':'postcode', 'residual_visible':True}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property.tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree
                string="Properties"
                decoration-success="state == 'received' or state == 'acepted'"
                decoration-bf="state == 'acepted'"
                decoration-muted="state == 'sold'"
            >
                <field name="name" />
                <field name="postcode" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="state" invisible="1" />
                <field name="property_type_id" />
                <field name="garden" />
            </tree>
        </field>
    </record>
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property.form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button
                        name='action_sold'
                        type='object'
                        string='Sold'
                        class="grid_arrow_range btn btn-secondary"
                        states='new, acepted, canceled'
                    />
                    <button
                        name='action_cancel'
                        type='object'
                        string='Cancel'
                        class="grid_arrow_range btn btn-secondary"
                        states='new, acepted, canceled'
                    />
                    <field name="state" widget="statusbar" statusbar_visible="new, acepted, received, sold" />
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name" placeholder="Title" />
                        </h1>
                        <field
                            name="tag_ids"
                            widget="many2many_tags"
                            options="{'color_field': 'color'}"
                            editable="true"
                        />
                    </div>
                    <group>
                        <group>
                            <group>
                                <field name="state" />
                                <field name="property_type_id" />
                                <field name="postcode" />
                                <field name="date_availability" optional="1" invisible="1" />
                            </group>
                            <group>
                                <field name="expected_price" />
                                <field name="best_price" />
                                <field name="selling_price" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}" />
                                    <field name="garden_orientation" />
                                    <field name="total_area" />

                                </group>
                            </page>
                            <page string="Offers">
                                <field
                                    name="offer_ids"
                                    widget="one2many_list"
                                    attrs="{'readonly': [('state', 'in', ['acepted', 'sold', 'canceled'])]}"
                                >
                                    <tree
                                        decoration-danger="status == 'refused'"
                                        decoration-success="status == 'accepted'"
                                        editable="true"
                                    >
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <button
                                            name='action_accept'
                                            title="Accept"
                                            type='object'
                                            icon="fa-check"
                                            attrs="{'invisible': [('status', 'in', ['accepted','refused'])]}"
                                        />
                                        <button
                                            name='action_refuse'
                                            title="Refuse"
                                            type='object'
                                            icon="fa-times"
                                            attrs="{'invisible': [('status', 'in', ['accepted','refused'])]}"
                                        />
                                        <field name="status" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="salesperson_id" />
                                    <field name="buyer_id" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
